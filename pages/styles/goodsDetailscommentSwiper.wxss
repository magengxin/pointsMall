/* 商品详情页评评价轮播样式 */
.com-slider {
  height: 180px;
  background-color: #fff;
  margin: 5px 9px 6px 9px;
  border-radius: 10px;
  overflow: hidden;
  padding: 10px;
}

.com-info {
  display: flex;
  justify-content: space-between;
}

.com-left, .com-right {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.more-com {
  width: 7px;
  height: 11px;
}

.line {
  width: 3px;
  height: 11px;
  background-color: #bc8a51;
}

.com-detail {
  font-size: 12px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-left: 4px;
}

.view-more {
  font-size: 12px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-right: 4px;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-container {
  width: 25px;
  height: 25px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 4px;
}

.com-person {
  height: 30px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.nickname {
  font-size: 12px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(154, 154, 154, 1);
}

.content {
  margin-top: 4px;
  /* text-indent: 2em; */
  font-size: 12px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(74, 74, 74, 1);
}

.com-imgs {
  margin-top: 3px;
  display: flex;
}

.com-imgs view {
  width: 25%;
  margin-left: 5px;
}

.com-imgs view:nth-child(1) {
  margin-left: 0;
}

.com-imgs image {
  width: 80px;
  height: 80px;
}

.market-price {
  padding: 5px 10px 20px 10px;
  background-color: #fff;
}

.sup {
  font-size: 12px;
  font-family: PingFangSC-Regular;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.copy-link {
  /* margin-top: 5px; */
  text-align: center;
  font-size: 12px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(128, 128, 128, 1);
  margin-top: 15px;
}

.hide {
  display: none;
}

.detail-com-img {
  border: 1px solid #eee;
}
.detail-coin {
  width: 15px;
  height: 15px;
  margin-right: 3px;
}
/* 商品详情页评评价轮播样式end */
