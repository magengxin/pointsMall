.newUserMask {
  position: absolute;
  z-index: 1000;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  overflow: hidden;
}

.container {
  width: 340px;
  height: 300px;
  position: relative;
  margin: 35% auto 0 auto;
  background-image: url(https://daoyin.datuhongan.com/Upload/20190124/0111.png);
  background-size: 100% 100%;
}

.close {
  width: 30px;
  height: 30px;
  position: absolute;
  top: -40px;
  left: 50%;
  transform: translateX(-50%);
}

.userBtn {
  width: 140px;
  text-align: center;
  height: 34px;
  line-height: 34px;
  margin: 15px auto;
  background: linear-gradient(0deg, rgba(246, 179, 86, 1), rgba(253, 239, 187, 1));
  border-radius: 34px;
  font-size: 13px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(188, 26, 21, 1);
}

.userBtn view {
  color: yellow;
}
