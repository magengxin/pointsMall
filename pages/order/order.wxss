.order-info {
  background-color: #fff;
}
.add-address {
  display: flex;
  justify-content: flex-start;
  height: 50px;
  line-height: 50px;
  margin-bottom: 10px;
  background-color: #fff;
  border-top: 1px solid #edeced;
  position: relative;
}
.plus {
  margin:0 10px;
}
.add {
  font-size: 15px;
  color: #F93240;
}
.plus image
 {
  width: 14px;
  height: 14px;
}
.arrow image {
  height: 16px;
  width: 10px;
}
.arrow {
  position: absolute;
  right: 10px;
}
.info text {
  font-size: 14px;
  color: #333;
  margin: 15px 10px 0 10px;
  box-sizing: border-box;
}
.order-detail {
  display: flex;
  justify-content: space-between;
  height: 96px;
  background-color: #f5f6f5;
  /* background-color: red; */
  margin: 15px 10px 0 10px;
  box-sizing: border-box;
}
.order-img {
  width: 30%;
}
.img-container {
  width: 90%;
  height: 90%;
  background-color: #fff;
}
.order-img image{
  width: 90%;
  height: 90%;
}
.order-name {
  width: 55%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.order-name view {
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size:15px;
  color: #333; 
}
.order-name view:nth-child(2) {
  margin-top: 10px;
}
.order-bal,.order-post,.order-pay {
  display: flex;
  justify-content: space-between;
  margin: 6px 10px;
  padding: 6px;
  box-sizing: border-box;
  font-size: 12px;
  color: #333;
}
.order-bal,.order-post {
  border-bottom: 1px solid #edeced;
}
.order-num {
  width: 10%;
}
.order-num text {
  font-size: 12px;
  color: #808080;
}
.paynow {
  width: 90%;
  background-color:#FC2E39;
  text-align: center;
  height: 50px;
  line-height: 50px;
  border-radius: 3px;
  margin: 20px auto;
}
.paynow text {
  color: #fff;
  font-size: 16px;
}
