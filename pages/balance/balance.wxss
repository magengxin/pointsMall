.balance-banner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 180px;
  background-color: #fff;
  position: relative;
  border-top: 1px solid #fafafa;
  /* background-color: cyan; */
}
.nickname {
  position: absolute;
  left: 10px;
  top: 10px;
}
.income, .used {
  /* background-color: red; */
  width: 50%;
  height: 50px;
  font-weight: 700;
  text-align: center;
}

.income {
  /* text-align: right; */
  border-right: 1px solid #b3b3b3;
  padding-right: 25px;
}

.income view:nth-child(1) {
  color: #1a1a1a;
  font-size: 25px;
}

.income view:nth-child(2) {
  font-size: 12px;
  color: #666;
}

.used {
  /* text-align: left; */
  padding-left: 15px;
}

.used view:nth-child(1) {
  color: #e63f3f;
  font-size: 25px;
}

.used view:nth-child(2) {
  font-size: 12px;
  color: #e63f3f;
}

.use-order {
  margin-top: 10px;
  background-color: #fff;
}

.order-item {
  display: flex;
  justify-content: space-between;
  margin: 15px 10px;
  border-bottom: 1px solid #fafafa;
  padding: 15px 0;
  box-sizing: border-box;
}

.use-name {
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.use-date {
  font-size: 11px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(178, 178, 178, 1);
}

.use-price {
  font-size: 14px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}
