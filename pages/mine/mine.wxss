.user-info {
  height: 200px;
  position: relative;
}

.user-info .bg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.avatar {
  width: 50%;
  display: flex;
  justify-content: flex-start;
  padding-left: 10px;
  margin-top: 10px;
  box-sizing: border-box;
}

.my-avatar {
  border-radius: 50%;
  overflow: hidden;
}

.avatar view {
  height: 40px;
  /* line-height: 30px; */
}

.avatar .nickname {
  font-size: 13px;
  color: #fff;
  line-height: 40px;
}

.my-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
}

.avatar .my-avatar image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

.my-balance {
  position: absolute;
  text-align: center;
  font-size: 10px;
  top: 65%;
  color: #fff;
}

.my-balance text {
  font-size: 26px;
  font-weight: 700;
}

.tabs {
  display: flex;
  /* border-bottom: 1px solid #e6e6e6; */
  font-size: 13px;
}

.tab-all-list {
  margin-top: 6px;
  background-color: #fff;
  padding: 0px 8px 3px 8px;
  box-sizing: border-box;
  border-radius: 6px;
}

.all-orders, .wait-pay, .wait-get
.all-orders, .wait-pay, .wait-get {
  height: 30px;
  line-height: 30px;
  box-sizing: border-box;
  flex: 1;
  text-align: center;
}

.all-orders text, .wait-pay text, .wait-get text {
  height: 100%;
  display: inline-block;
}

.active {
  border-bottom: 2px solid #bc8a57;
  color: #bc8a57;
}

.my-order-name {
  display: flex;
  justify-content: space-between;
}

.order-detail {
  display: flex;
  justify-content: space-between;
  height: 93px;
  padding-bottom:6px;
  box-sizing: border-box;
}

.func {
  display: flex;
  justify-content: space-between;
}

.confirm-btn {
  display: flex;
  justify-content: space-between;
}

.confirm-btn view {
  margin-right: 4px;
}

.view-transport, .confirm-get, .payback, .cancel-order, .pay {
  font-size: 11px;
  padding: 0 8px;
  color: #323232;
  height: 25px;
  line-height: 25px;
  border-radius: 4px;
  text-align: center;
  border: 1px solid #f1f1f1;
}

.confirm-get {
  color: #fff;
  margin-left: 4px;
}

.order-img {
  width: 28%;
}

.img-container {
  width: 100%;
  height: 100%;
  /* padding: 4px; */
  box-sizing: border-box;
  /* background-color: #f5f6f5; */
}

.order-img image {
  width: 90px !important;
  height: 90px !important;
}

.order-name {
  width: 50%;
  padding-top: 10px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  position: relative;
}

.order-name .val {
  /* position: absolute; */
