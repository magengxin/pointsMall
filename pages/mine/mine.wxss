  font-size: 12px;
  font-family: PingFangSC-Light;
  font-weight: 400;
  color: rgba(188, 138, 87, 1);
}

.order-name view {
  width: 100%;
  font-size: 13px;
  color: #333;
  /* position: absolute; */
}

.order-name view:nth-child(2) {
  /* margin-top: 10px; */
}

.order-num {
  /* width: 5%; */
}

.order-num text {
  font-size: 12px;
  color: #808080;
}

.tab-all {
  box-sizing: border-box;
  margin:0 6px;
  /* background-color: rgba(245, 245, 245, 1); */
}

.order-status, .order-money {
  color: #b2b2b2;
  font-size: 11px;
  margin-bottom: 6px;
}

.order-status text, .order-money text {
  font-size: 11px;
  color: #BC8A57;
}

.my-order-name {
  /* border-top: 1px solid #e6e6e6; */
