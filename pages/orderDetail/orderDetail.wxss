.order-info {
  background-color: #fff;
  margin-bottom: 10px;
}

.add-address {
  padding: 5px 0;
  box-sizing: border-box;
  display: flex;
  line-height: 30px;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 10px;
  background-color: #fff;
  border-top: 1px solid #edeced;
}

.plus {
  margin: 0 10px;
  width: 5%;
}

.add {
  font-size: 15px;
  color: #bc8952;
  width: 90%;
  padding: 0 4px;
  box-sizing: border-box;
}

.plus image {
  width: 14px;
  height: 14px;
}

.arrow image {
  height: 16px;
  width: 10px;
}

.arrow {
  width: 5%;
  display: flex;
  justify-content: center;
}

.info text {
  font-size: 14px;
  color: #333;
  margin: 15px 10px 0 10px;
  box-sizing: border-box;
}

.order-detail {
  display: flex;
  justify-content: space-between;
  height: 96px;
  background-color: #f5f6f5;
  /* background-color: red; */
  margin: 15px 10px 0 10px;
  box-sizing: border-box;
}

.order-img {
  width: 30%;
}

.img-container {
  width: 100%;
  height: 100%;
  padding: 4px;
  background-color: #f5f6f5;
  box-sizing: border-box;
}

.order-img image {
  width: 90%;
  height: 90%;
}

.order-name {
  width: 60%;
  padding-top: 4px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.order-name view {
  width: 100%;
  /* height: 30px; */
  line-height: 30px;
  font-size: 14px;
  color: #333;
}

.order-name view:nth-child(2) {
  /* margin-top: 10px; */
}

.order-bal, .order-post, .order-pay {
  display: flex;
  justify-content: space-between;
  margin: 6px 10px;
  padding: 6px;
  box-sizing: border-box;
  font-size: 12px;
  color: #333;
}

.order-bal, .order-post {
  border-bottom: 1px solid #edeced;
}

.order-num {
  width: 5%;
}

.order-num text {
  font-size: 12px;
  color: #808080;
}

.paynow {
  width: 90%;
  text-align: center;
  height: 50px;
  line-height: 50px;
  border-radius: 3px;
  margin: 25px auto 0 auto;
  background: linear-gradient(to right, #f9ca8f, #bc8952);
}

.paynow text {
  color: #fff;
  font-size: 16px;
}

.my-order-info {
  background-color: #fff;
}

.my-order-detail {
  margin: 0 10px;
}

.my-info-title {
  padding: 10px 0;
  box-sizing: border-box;
  border-bottom: 1px solid #edeced;
}

.my-info-title text {
  font-size: 14px;
  color: #333;
}

.my-info-time {
  padding: 10px 0 15px 0;
  box-sizing: border-box;
}

.my-info-time  view {
  font-size: 12px;
  color: #b3b3b3;
  margin-top: 4px;
}

.confirm-info {
  display: flex;
  justify-content: flex-end;
  background-color: #fff;
  position: fixed;
  width: 100%;
  bottom: 0;
  padding: 8px 0;
  box-sizing: border-box;
}

.confirm-info view {
  font-size: 14px;
  width: 90px;
  color: #fff;
  border: 1px solid #fafafa;
  padding: 4px 10px;
  box-sizing: border-box;
  margin-right: 10px;
  border-radius: 4px;
  text-align: center;
  background-color: #bc8a51;
  border-radius: 16px;
}

.confirm-info view:nth-child(2) {
  color: #fff;
}

.hide {
  display: none;
}

/* 郑重承诺 */

.promise {
  margin-top: 65px;
  padding-bottom: 50px;
}

.title {
  height: 26px;
  line-height: 26px;
}

.line {
  width: 10px;
  height: 1px;
  background-color: rgba(128, 128, 128, 1);
}

.subtitle {
  margin: 0 6px;
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.promise-tips {
  padding: 0 65px;
  margin-top: 18px;
  box-sizing: border-box;
  text-align: center;
}

.promise-tips {
  font-size: 11px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(128, 128, 128, 1);
}

.recipient {
  display: flex;
  justify-content: space-between;
}

.recipient text {
  font-size: 15px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.address {
  font-size: 13px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}
