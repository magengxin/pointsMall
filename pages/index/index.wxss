@import '/pages/styles/springStyle.wxss'; /* 引入新年版本样式 */
.mall-container {
  background-color: #2b2520;
}
.mall-coupon-title {
  color: #fff;
  width: 162px;
  height: 30px;
  text-align: center;
  /* background-color: red; */
  top: -15px;
  border-radius: 15px;
  background: #352323;
  border: 2px solid #e4b281;
}

.mall-coupon-title {
  height: 30px;
  font-size: 14px;
  position: absolute;
  z-index: 100;
}

.more {
  position: absolute;
  right: 10px;
  top: 14px;
  width: 70px;
  font-size: 11px;
  height: 30px;
  line-height: 30px;
  color: #ffe7b2;
}

.more image {
  width: 15px;
  height: 15px;
  right: 0;
  margin-left: 10px;
}

.mall-coupon, .mall-goods {
  margin-top: 30px;
  position: relative;
  border: 1px solid transparent;
}

.mall-coupon-list {
  border-radius: 12px;
  margin-top: 20px;
}
/* 客服 */
.customer {
  position: absolute;
  width: 40px;
  height: 18px;
}
.customer button {
  background-color: transparent;
  width: 100%;
  height: 100%;
}
